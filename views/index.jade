extends layout

block content
    h1= title

    h3 Video capture
    a(href='/capture') Start capture

    h3 List
    ul
        each file in files
            li
                span.filename= file.name
                if file.state === 'playing'
                    a(href='/stop/' + file.name) stop
                    span ,
                    a(href='/stream/' + file.name) open stream
                else
                    a(href='/play/' + file.name) play
